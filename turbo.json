{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },

    "start": {
      "dependsOn": ["build"]
    },

    "lint:tsc": {
      "dependsOn": ["^build"]
    },
    "lint:eslint": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["//#root:lint", "lint:tsc", "lint:eslint"]
    },

    "test": {},

    "format": {
      "dependsOn": ["//#root:format"]
    },

    "dev": {
      "cache": false
    },

    "//#root:lint": {},
    "//#root:format": {}
  }
}
